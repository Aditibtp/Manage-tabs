{
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",

    "name": "Manage Tabs",
    "description": "This extension shows all the tabs open in chrome window",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
         "scripts": ["background.js"]
     },
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "web_accessible_resources": [
        "images/close.png",
        "circle.png",
        "images/circle.png",
        "images/delete.png"
    ]
}
